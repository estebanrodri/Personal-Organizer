<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studio.developper.organizer.personalorganizer">

    <application
        android:name=".PersonalOrganizerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan">
        <activity
            android:name=".Login.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.OrganizerMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Password.AddPasswordActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.OrganizerMainActivity" />
        </activity>
        <activity
            android:name=".Task.AddTaskActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.OrganizerMainActivity" />
        </activity>


        <activity
            android:name=".Password.PasswordDetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.OrganizerMainActivity" />
        </activity>


        <activity
            android:name=".Task.TaskDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.OrganizerMainActivity" />
        </activity>
    </application>
</manifest>
